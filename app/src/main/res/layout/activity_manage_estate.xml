            android:padding="@dimen/activity_manage_estate_linear_padding"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_state"
