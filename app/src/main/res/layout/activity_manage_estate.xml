            android:padding="@dimen/activity_manage_estate_linear_padding"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_sale_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_sale_date"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <TextView
                    android:id="@+id/activity_manage_estate_date_picker_sale_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_sale_date"
                    android:layout_marginStart="@dimen/activity_manage_estate_text_sub_category_margin"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_sold_out_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_sold_out_date"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <TextView
                    android:id="@+id/activity_manage_estate_date_picker_sold_out_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_sold_out_date"
                    android:layout_marginStart="@dimen/activity_manage_estate_text_sub_category_margin"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
