            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_manage_estate_linear_padding"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_type"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size" />

                <Spinner
                    android:id="@+id/activity_manage_estate_spinner_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_manage_estate_spinner_margin_top"
                    android:layout_below="@id/activity_manage_estate_text_type" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin">

                <TextView
                    android:id="@+id/activity_manage_estate_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_price"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_price"
                    android:inputType="number"
                    android:hint="@null"
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_manage_estate_text_unity_margin_bottom"
                    android:text="@string/activity_manage_estate_text_price_unity"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_unity_size"
                    android:textColor="@android:color/black"
                    android:layout_alignBottom="@id/activity_manage_estate_edit_text_price"
                    android:layout_toEndOf="@id/activity_manage_estate_edit_text_price"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_manage_estate_linear_padding"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_surface_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_surface_area"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <!-- TODO remove width, use dimen -->
                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_surface_area"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_surface_area"
                    android:inputType="number"
                    android:hint="@null"
                    android:importantForAutofill="no"
                    android:maxLength="5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_manage_estate_text_unity_margin_bottom"
                    android:text="@string/activity_manage_estate_text_surface_unity"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_unity_size"
                    android:textColor="@android:color/black"
                    android:layout_alignBottom="@id/activity_manage_estate_edit_text_surface_area"
                    android:layout_toEndOf="@id/activity_manage_estate_edit_text_surface_area"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_rooms_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_rooms_number"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_rooms_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_rooms_number"
                    android:inputType="number"
                    android:hint="@null"
                    android:importantForAutofill="no" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <TextView
            android:id="@+id/activity_manage_estate_text_category_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"
            android:text="@string/activity_manage_estate_text_description"
            android:textStyle="bold"
            android:textSize="@dimen/activity_manage_estate_text_category_size"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <EditText
            android:id="@+id/activity_manage_estate_edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"
            android:gravity="top"
            android:inputType="textAutoComplete|textAutoCorrect|textMultiLine"
            android:hint="@string/activity_manage_estate_text_description_hint"
            android:minLines="5"
            android:maxLines="15"
            android:importantForAutofill="no"
            android:background="@drawable/edit_text_border"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <TextView
            android:id="@+id/activity_manage_estate_text_category_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"
            android:text="@string/activity_manage_estate_text_category_image"
            android:textStyle="bold"
            android:textSize="@dimen/activity_manage_estate_text_category_size"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_manage_estate_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <TextView
            android:id="@+id/activity_manage_estate_text_category_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"
            android:text="@string/activity_manage_estate_text_address"
            android:textStyle="bold"
            android:textSize="@dimen/activity_manage_estate_text_category_size"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_manage_estate_linear_padding"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_street_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_street_number"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_street_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_street_number"
                    android:inputType="number"
                    android:maxLength="5"
                    android:hint="@null"
                    android:importantForAutofill="no" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_street_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_street_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_street_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_street_name"
                    android:inputType="text"
                    android:hint="@null"
                    android:importantForAutofill="no" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_manage_estate_linear_padding">

            <TextView
                android:id="@+id/activity_manage_estate_text_flat_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                android:text="@string/activity_manage_estate_text_flat_building"
                android:textStyle="bold"
                android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

            <EditText
                android:id="@+id/activity_manage_estate_edit_text_flat_building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_manage_estate_text_flat_building"
                android:inputType="text"
                android:hint="@null"
                android:importantForAutofill="no" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_manage_estate_linear_padding"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_postal_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_postal_code"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_postal_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_postal_code"
                    android:inputType="number"
                    android:maxLength="5"
                    android:hint="@null"
                    android:importantForAutofill="no" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/activity_manage_estate_text_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                    android:text="@string/activity_manage_estate_text_city"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

                <EditText
                    android:id="@+id/activity_manage_estate_edit_text_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_manage_estate_text_city"
                    android:inputType="text"
                    android:hint="@null"
                    android:importantForAutofill="no" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_manage_estate_linear_padding">

            <TextView
                android:id="@+id/activity_manage_estate_text_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                android:text="@string/activity_manage_estate_text_country"
                android:textStyle="bold"
                android:textSize="@dimen/activity_manage_estate_text_sub_category_size"/>

            <EditText
                android:id="@+id/activity_manage_estate_edit_text_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_manage_estate_text_country"
                android:inputType="text"
                android:hint="@null"
                android:importantForAutofill="no" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <TextView
            android:id="@+id/activity_manage_estate_text_category_interest_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"
            android:text="@string/activity_manage_estate_text_category_interest_places"
            android:textStyle="bold"
            android:textSize="@dimen/activity_manage_estate_text_category_size"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_manage_estate_linear_padding">

            <Spinner
                android:id="@+id/activity_manage_estate_spinner_interest_places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_manage_estate_spinner_margin_top" />

            <ImageView
                android:id="@+id/activity_manage_estate_image_interest_places_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activity_manage_estate_spinner_interest_places"
                android:layout_alignBottom="@id/activity_manage_estate_spinner_interest_places"
                app:srcCompat="@drawable/ic_baseline_delete_forever_black_24"
                android:contentDescription="@null"
                android:tint="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/activity_manage_estate_edit_text_interest_places_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/activity_manage_estate_interest_places_add"
                android:inputType="text"
                android:hint="@null"
                android:importantForAutofill="no"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/activity_manage_estate_interest_places_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_manage_estate_text_sub_category_margin"
                android:layout_below="@+id/activity_manage_estate_spinner_interest_places"
                android:text="@string/activity_manage_estate_text_interest_places_add"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_manage_estate_text_sub_category_size"
                android:drawableEnd="@drawable/ic_baseline_add_circle_black_24"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/holo_green_dark"/>
            <!-- TODO color and padding -->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <TextView
            android:id="@+id/activity_manage_estate_text_category_sale_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_manage_estate_text_category_margin"
            android:text="@string/activity_manage_estate_text_category_sale_data"
            android:textStyle="bold"
            android:textSize="@dimen/activity_manage_estate_text_category_size"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/activity_manage_estate_text_category_margin"
            android:layout_marginEnd="@dimen/activity_manage_estate_text_category_margin"
            android:background="@color/colorDarkLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
