<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- NAVIGATION VIEW THEME -->
    <style name="NavigationDrawerTheme">
        <item name="android:textSize">@dimen/nav_drawer_text_item_text_size_theme</item>
    </style>

    <!-- Date Picker Dialog Theme -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- ALERT DIALOG -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Manage Container Style -->
    <style name="ManageContainerTheme" parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/fragments_manage_estate_relative_padding</item>
    </style>

    <!-- Manage Category Style -->
    <style name="ManageCategoryTheme">
        <item name="android:layout_margin">@dimen/fragments_manage_estate_text_category_margin</item>
        <item name="android:padding">@dimen/fragments_manage_estate_text_category_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fragments_manage_estate_text_category_size</item>
    </style>
    <!-- Manage Card View Theme -->
    <style name="ManageCardViewTheme">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="elevation">@dimen/default_elevation</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/fragments_manage_estate_container_corner_radius</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!-- Edit Text Price -->
    <style name="EditTextPriceTheme" parent="AppTheme">
        <item name="colorAccent">@android:color/holo_green_dark</item>
    </style>

    <!-- Show Images Theme -->
    <style name="ShowImages" parent="AppTheme">
        <item name="colorPrimary">@color/colorTransGrey</item>
        <item name="colorPrimaryDark">@color/colorTransGrey</item>
    </style>

</resources>
