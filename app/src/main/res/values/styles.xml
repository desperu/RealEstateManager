<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Date Picker Dialog Theme -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- ALERT DIALOG -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Manage Container Style -->
    <style name="ManageContainerTheme" parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/default_elevation</item>
        <item name="android:background">@drawable/container_border</item>
        <item name="android:layout_margin">@dimen/fragments_manage_estate_container_margin</item>
    </style>

    <!-- Manage Category Style -->
    <style name="ManageCategoryTheme" parent="ManageContainerTheme">
        <item name="android:layout_margin">@dimen/fragments_manage_estate_text_category_margin</item>
        <item name="android:padding">@dimen/fragments_manage_estate_text_category_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fragments_manage_estate_text_category_size</item>
    </style>

    <!-- Edit Text Price -->
    <style name="EditTextPriceTheme" parent="AppTheme">
        <item name="colorAccent">@android:color/holo_green_dark</item>
    </style>

</resources>
